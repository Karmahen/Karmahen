SELECT * FROM actors;
SELECT actors.name, hobbies.name AS hobby
FROM actors
JOIN hobbies
ON actors.id = hobbies.person_id;

SELECT actors.name, hobbies.name AS hobby
FROM actors
JOIN hobbies
ON actors.id = hobbies.person_id
WHERE hobby = "writing";

SELECT actors.name, hobbies.name AS hobby
FROM actors
JOIN hobbies
ON actors.id = hobbies.person_id
WHERE hobby = "singing";
